# Environment
NODE_ENV=development
PORT=3000
APP_BASE_URL=http://localhost:3000

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/lineup?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT
JWT_SECRET="dev-secret-key-change-me"
JWT_REFRESH_SECRET="dev-refresh-secret-key-change-me"

# AWS S3 (MinIO Local)
S3_ENDPOINT="http://localhost:9000"
S3_ACCESS_KEY="minioadmin"
S3_SECRET_KEY="minioadmin"
S3_BUCKET_NAME="lineup-assets"
AWS_REGION="us-east-1"

# Email (SMTP / SES)
# Options: smtp | ses
EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.ethereal.email
SMTP_PORT=587
SMTP_USER=user
SMTP_PASS=pass
DEFAULT_FROM_ADDRESS="no-reply@lineup.local"

# Security
# 32 bytes hex string for token encryption
TOKEN_ENCRYPTION_KEY="0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef"

# CI/CD
GHCR_TOKEN=
